<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_item_detail"
            app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/item_detail_date"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="2dp">
                                </TextView>
                        </LinearLayout>
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                                <TableRow>
                                        <TextView
                                            android:layout_weight="1"
                                            android:id="@+id/item_detail_velocity"
                                            android:textSize="15sp"
                                            android:paddingBottom="3dp"
                                            android:textAlignment="center"
                                            android:paddingLeft="2dp"
                                            android:text="Earth">
                                        </TextView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:id="@+id/item_detail_missdistance"
                                            android:textSize="15sp"
                                            android:paddingLeft="2dp"
                                            android:textAlignment="center"
                                            android:paddingBottom="3dp"
                                            android:text="3 days left">
                                        </TextView>
                                </TableRow>
                        </TableLayout>
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:weightSum="2">
                                <TableRow >
                                        <TextView
                                            android:layout_weight="1"
                                            android:id="@+id/item_detail_body"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            android:textAlignment="center"
                                            android:paddingBottom="3dp"
                                            android:paddingLeft="2dp"
                                            android:text="Earth">
                                        </TextView>
                                        <TextView
                                            android:background="@color/toolbar_text"
                                            android:textColor="@color/toolbar_main"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:id="@+id/item_detail_days"
                                            android:textSize="17sp"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:paddingLeft="2dp"
                                            android:paddingBottom="3dp"
                                            android:text="3 days left">
                                        </TextView>
                                </TableRow>
                        </TableLayout>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>